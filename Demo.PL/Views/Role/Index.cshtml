@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>All Role</h1>
<br />
<br />

<a asp-action="Create" class="btn btn-primary">Create New Role</a>

<form method="post" asp-action="Index" class="mt-3">
    <div class="row justify-content-center align-items-center">
        <div class="col-8">
            <input type="text" placeholder="Search By Name .." class="form-control" name="searchValue" />
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </div>
</form>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(r => role.Id)</td>
                    <td>@Html.DisplayFor(r => role.Name)</td>

                    <partial name="_ButtonsPartialView" model="@role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Users</h3>
    </div>
}